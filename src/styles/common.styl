*
    margin 0
    padding 0

body
    fonts()

    @media small-screen
        font-size (font-size - 4)

h1, h2, h3
    font-weight normal-weight
    padding-bottom .25em

a
    color black
    text-decoration none
    border-bottom 1px solid #aeaeae

a:visited
    color gray
    border-color #ccc

pre, code
    padding .1em
    font-size 18px
    font-family "Lucida Console", Monaco, monospace
    background-color #fdf6e3
    color #586e75

pre
    padding .5em
    overflow scroll

    code
        white-space pre
        padding 0

code
    white-space nowrap
    @media small-screen
        hyphens none

    &.lang-bash:before
        content '$ '

.keyword
    color #859900

.string
    color #2aa198

p, ul, ol, pre
    margin-bottom .5em

p
    @media small-screen
        hyphens auto

sup
    vertical-align top
    font-size .7em

ul
    li
        list-style none

        &:before
            content 'â€”'
            margin-right .25em

ol
    li
        @media small-screen
            margin-left 1.5em
