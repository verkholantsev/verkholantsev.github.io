@require 'constants.styl'
@import 'common.styl'
@import 'divider.styl'
@import 'container.styl'
@import 'header.styl'
@import 'footer.styl'

html, body
    height 100%

    @media small-screen
        height auto

.about, .avatar
    width 100%

avatar-size = 200px
.avatar
    text-align center
    margin-bottom 1.5em

.avatar img
    width 100%
    border-radius avatar-size
    max-width (avatar-size / 2)
    max-height (avatar-size / 2)

ul.contacts
    text-align center

    li
        display inline-block
        margin-left 0
        margin-right 1em

        &:before
            content ''

        a
            vertical-align middle

.right
    float right
    text-align right

    @media small-screen
        float none
        font-size small
